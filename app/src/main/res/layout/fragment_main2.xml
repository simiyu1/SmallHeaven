<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="simiyu.com.smallheaven.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/headerangelblack" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroller"
        android:layout_below="@id/back"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pieceback"
            android:orientation="vertical"
            >

            <!--ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/threecup1"/-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myloc"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:pointerIcon="zoom_in"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_action_cakeloc"
                android:background="@color/backtext"
                android:clickable="true"
                android:text="@string/location"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mycont"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_action_mycontact"
                android:background="@color/backtext"
                android:text="Contact Us: 0700-000-000 "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/myhours"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_action_myhours"
                android:background="@color/backtext"
                android:text="Hours: 08:00-20:00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:background="@color/backtext"
                android:padding="12dp"
                android:text="@string/Description"/>
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/inviter"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="6dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Poke Friends"/>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>
